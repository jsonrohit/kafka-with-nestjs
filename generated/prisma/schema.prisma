generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  location Location[]

  @@map("user")
}

model Geofence {
  id        Int    @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  radius    Float // in meters

  @@map("geofence")
}

model Location {
  id        Int      @id @default(autoincrement())
  userId    Int
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])

  @@map("location")
}
